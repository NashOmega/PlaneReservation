@page
@model Api.Pages.Reservation.CreateModel

<partial name="_Notification" />

<hr />
<div id="reservation-form">
    <h3>Book a Reservation</h3>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReservationRequest.DepartureCity" class="control-label"></label>
                    <input asp-for="ReservationRequest.DepartureCity" class="form-control" />
                    <span asp-validation-for="ReservationRequest.DepartureCity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReservationRequest.DepartureDate" class="control-label"></label>
                    <input asp-for="ReservationRequest.DepartureDate" class="form-control" type="datetime-local" value="@DateTime.Now.ToString(" yyyy-MM-ddTHH:mm:ss")" />
                    <span asp-validation-for="ReservationRequest.DepartureDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReservationRequest.PlaneId" class="control-label"></label>
                    <select asp-for="ReservationRequest.PlaneId" class="form-control">
                        <option value="">-- Select a plane --</option>
                        @foreach (var plane in Model.PlaneList)
                        {
                            <option value="@plane.Id">@plane.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ReservationRequest.PlaneId" class="text-danger"></span>
                </div>
                @{int i = 0;}
                @foreach (var item in Model.ReservationRequest.PassengerRequests)
                {
                    int j = i + 1;
                    <p class="mt-3">Passenger @j</p>
                    <div class="form-group  m-5 mt-0 mb-0 ">
                        <label for="ReservationRequest_PassengerRequests_@(i)__LastName" class="control-label">Last Name</label>
                        <input id="ReservationRequest_PassengerRequests_@(i)__LastName" name="ReservationRequest.PassengerRequests[@(i)].LastName" class="form-control" />
                        

                        <label for="ReservationRequest_PassengerRequests_@(i)__FirstName" class="control-label">First Name</label>
                        <input id="ReservationRequest_PassengerRequests_@(i)__FirstName" name="ReservationRequest.PassengerRequests[@(i)].FirstName" class="form-control" />
                       

                        <label for="ReservationRequest_PassengerRequests_@(i)__Email" class="control-label">Email</label>
                        <input id="ReservationRequest_PassengerRequests_@(i)__Email" name="ReservationRequest.PassengerRequests[@(i)].Email" class="form-control" />
                      
                    </div>
                    i++;
                }
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-3">
    <a href="/Page/Index" class="btn btn-dark">Back to List</a>
</div>

